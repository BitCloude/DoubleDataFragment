<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:weightSum="2">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.appers.ayvaz.doubledatafragment.DataFragOne"
        android:id="@+id/fragment"
        android:layout_alignParentStart="true"
        tools:layout="@layout/fragment_data_frag_one" />

    <fragment
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:name="com.appers.ayvaz.doubledatafragment.DataFragTwo"
        android:id="@+id/fragment2"
        android:layout_below="@+id/fragment"
        android:layout_alignParentStart="true"
        tools:layout="@layout/fragment_data_frag_two" />

</LinearLayout>
